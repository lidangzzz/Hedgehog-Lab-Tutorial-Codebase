tex(`\\text{The input matrix } A: `)
A = mat([[7,2],[2,1]]);         // Define Matrix A
formulaTex`A=${A}`

tex(`\\text{The Cholesky decomposition result } L: `)
L = chol(A).L;  L.digits = 5;   //  Calculate L and keep 5 digits
formulaTex`L=${L}`

tex(`\\text{Let's verify the result by calculating } LL^{T}: `)
A_ = L*L.T();   A_.digits = 5;   // Verify the result
formulaTex`LL^{T}=${A_}`
